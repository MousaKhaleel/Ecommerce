@model Ecommerce.ViewModels.ProductViewModel

<div class="writeContainer">
	<form asp-action="AddProduct" method="POST" enctype="multipart/form-data">
		<h1>Add a Product</h1>
		<div class="form-group">
			<label for="title">Name</label>
			<input type="text"
				   class="form-control"
				   id="title"
				   placeholder=""
				   asp-for="ProductName"
				   required />
		</div>
		<div class="mb-3">
			<label for="formFile" class="form-label">Upload Product Image</label>
			<input class="form-control" name="ProductImageFile" type="file" id="formFile">
		</div>
		<br />
		<!--TODO:check-->
		<div class="form-group">
			<div class="input-group-prepend">
				<span class="input-group-text">USD</span>
				@* <span class="input-group-text">0.00</span> *@
			</div>
			<label for="price">Price</label>
			<input type="text" class="form-control" id="price" placeholder="Price in USD" asp-for="ProductPrice" aria-label="Amount (to the nearest dollar)" required>
			<input type="text" value="USD" asp-for="Currency" hidden />
		</div>
		<div class="form-group">
			<label for="stock">StockQuantity</label>
			<input type="text"
				   class="form-control"
				   id="stock"
				   placeholder="presisly"
				   asp-for="StockQuantity"
				   required />
		</div>
		<br />
		<label for="Categories">Categories</label>
		<div>
			@foreach (var category in ViewBag.Categories)
			{
				<div class="form-check">
					<input type="checkbox" class="form-check-input" name="SelectedCourseIds" value="@category.Id"
					@if (Model != null)
						@(Model.SelectedCategoriesIds.Contains(category.Id) ? "checked" : "")
	 />
					<label class="form-check-label" for="@category.Id">@category.CategoryName</label>
				</div>
			}
		<br />
		<div class="form-group">
			<label for="description">Description</label>
			<textarea class="form-control"
					  id="description"
					  rows="12"
					  asp-for="ProductDescription"
					  required></textarea>
		</div>
		<br />
		<button type="submit" class="btn w-100" style="background: rgb(0, 166, 204); color: white;">
			Add
		</button>
	</form>
</div>