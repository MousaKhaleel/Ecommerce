@model Ecommerce.Areas.Admin.ViewModels.CategoryViewModel

<div class="writeContainer">
    <form asp-action="AddCategory" method="POST">
	<h1>Add a Category</h1>
                <div class="form-group">
        <label for="title">Name</label>
        <input type="text"
               class="form-control"
               id="title"
               placeholder=""
               asp-for="CategoryName"
               required />
    </div>
            <br />
    <button type="submit" class="btn w-100" style="background: rgb(0, 166, 204); color: white;">
        Add
    </button>
    </form>
</div>