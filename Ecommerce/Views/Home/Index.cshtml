@model List<Ecommerce.Models.Product>

<div class="py-5 c2a6 CTAbg" style="padding:30%">
	<div class="container">
		<!-- row  -->
		<div class="row justify-content-center">
			<div class="col-md-8 text-center">
				<h3 class="mb-3">Are you happy with what we offer? Grab your WrapKit Copy Now</h3>
				<h6 class="subtitle font-weight-normal">You can relay on our amazing features list and also our customer services will be great experience for you without doubt</h6>
				<button class="btn btn-danger btn-md mt-3">Search Properties</button>
			</div>
		</div>
		<!-- row  -->
	</div>
</div>

<div>
	<p>add catrgory cards</p>
</div>

<section class="py-5">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12">
				<div class="bootstrap-tabs product-tabs">
					<div class="tabs-header d-flex justify-content-between border-bottom my-5">
						<h3>Trending Products</h3>
						<nav>
							<div class="nav nav-tabs" id="nav-tab" role="tablist">
								<a href="#" class="nav-link text-uppercase fs-6 active" id="nav-all-tab" data-bs-toggle="tab" data-bs-target="#nav-all">All</a>
							</div>
						</nav>
					</div>

					@if (Model != null)
					{
						<div class="tab-content" id="nav-tabContent">
							<div class="tab-pane fade show active" id="nav-all" role="tabpanel" aria-labelledby="nav-all-tab">
								<div class="product-grid row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 row-cols-xl-5">
									@foreach (var product in Model)
									{
										<div class="col border" style="margin:2px; padding:1px">
											<div class="product-item">
												<a asp-action="ProductDetails" asp-controller="Product" asp-route-d="@product.Id">
													<figure>
														<img width="232px" src="https://images-na.ssl-images-amazon.com/images/G/01/AMAZON_FASHION/2021/CML_Holiday21/Fashion/LANDING_PAGES/headers/CML_HOL21_LP-HEADER_XCAT-M_DT._CB1634600139_.jpg" class="tab-image">
													</figure>
													<h3>@product.ProductName</h3>
													<span class="qty">@product.StockQuantity left</span>
													<span class="price">@product.ProductPrice @product.Currency</span>
												</a>
												<div class="d-flex align-items-center justify-content-between">
													<a asp-action="AddToCart" asp-controller="Product" asp-route-id="@product.Id" class="btn quantity-right-plus btn btn-success btn-number w-100">
														+
													</a>
												</div>
											</div>
										</div>
									}
								</div>
							</div>
						</div>
					}
				</div>
			</div>
		</div>
	</div>
</section>



